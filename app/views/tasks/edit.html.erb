<%= form_for(@task, html: {class: "some-classs"}) do |f| %>
  <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control"  %>
  </div>
  <div class="form-group">
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  </div>
  <%= f.submit "Update Task", class: "btn btn-primary" %>
<% end %>
