<h1><%= @task.title %></h1>

<div class="edit">
  <%= link_to "Edit", edit_path(@task), class: "btn btn-primary" %>
</div>

<div class="box">
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>
</div>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"
%>


<hr>

<%= link_to "Back to list", tasks_path, class: "btn btn-success" %>
